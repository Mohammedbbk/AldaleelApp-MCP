# Aldaleel MCP Environment Variables
# Copy this file to .env and fill in your actual values.

# Gateway Server Port (from server.js default or env)
PORT=8000

# OpenAI API Key (Required by config.js & servers.config.js)
OPENAI_API_KEY=

# Supabase Credentials (Required by config.js)
SUPABASE_URL=
SUPABASE_KEY=

# Exa API Key (Required by config.js - Purpose needs clarification)
EXA_API_KEY=

# Mapbox API Key (Required by servers.config.js for Travel Planner)
MAPBOX_API_KEY=

# Ticketmaster API Key (Required by servers.config.js for Live Events)
TICKETMASTER_API_KEY=

# TripAdvisor API Key (Required by servers.config.js for TripAdvisor MCP)
TRIPADVISOR_API_KEY=

# Microservice Ports (Defaults from servers.config.js, can be overridden in .env)
AI_SERVER_PORT=8001
TRAVEL_PLANNER_PORT=8002
LIVE_EVENTS_PORT=8003
TRIPADVISOR_PORT=8006
AIRBNB_PORT=8007
VISA_REQUIREMENTS_PORT=8007 # Note: Default port changed in visa-requirements-server.js
CULTURE_INSIGHTS_PORT=8008

# Airbnb MCP Server Specific (Optional - from servers.config.js)
# Set to 'true' to ignore robots.txt when scraping (use with caution)
IGNORE_ROBOTS_TXT=false

# Visa & Culture Insights Servers (Optional - Defaults from servers.config.js / service files)
# These point to the LLM/Brave service used by visa/culture servers
BRAVE_MCP_URL=http://localhost:8005 # Example: URL of your LLM/Brave service
BRAVE_API_ENDPOINT=/api/chat       # Example: API endpoint of your LLM/Brave service
BRAVE_PORT=8005                   # Example: Port of your LLM/Brave service (if needed by service)
VISA_REQUEST_TIMEOUT=25000        # Timeout in ms for visa requests
CULTURE_REQUEST_TIMEOUT=30000     # Timeout in ms for culture requests

# TripAdvisor MCP Server Specific (Flask - from servers.config.js)
FLASK_APP=server.py
FLASK_ENV=development
